<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:stretchColumns="*" >

        <TableRow android:layout_weight="1.0" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/info_bg" >

                <LinearLayout
                    android:id="@id/rent_car_detail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@id/order_id"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="20dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@id/rent_car_status"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@id/order_car_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp" >
                    </TextView>

                    <TextView
                        android:id="@id/rent_cost"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@id/payment_amount"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@id/pay_type"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@id/use_coupons"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@id/points"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@id/rent_mileage"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp" >
                    </TextView>

                    <TextView
                        android:id="@id/get_on_car_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp" >
                    </TextView>

                    <TextView
                        android:id="@id/get_on_car_location"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp" >
                    </TextView>

                    <TextView
                        android:id="@id/get_off_car_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp"
                        android:visibility="gone" >
                    </TextView>

                    <TextView
                        android:id="@id/get_off_car_location"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp" >
                    </TextView>

                    <TextView
                        android:id="@id/car_type"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp" >
                    </TextView>

                    <TextView
                        android:id="@id/car_license"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp" >
                    </TextView>

                    <LinearLayout
                        android:id="@id/grade"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/driver_grade"
                            android:textColor="@color/dark"
                            android:textSize="16sp" />

                        <RatingBar
                            android:id="@id/driver_grade"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:max="5"
                            android:numStars="5" />
                    </LinearLayout>

                    <TextView
                        android:id="@id/driver_id"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp" >
                    </TextView>

                    <TextView
                        android:id="@id/driver_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textColor="@color/dark"
                        android:textSize="16sp" >
                    </TextView>

                    <LinearLayout
                        android:id="@id/review_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/my_grade"
                                android:textColor="@color/dark"
                                android:textSize="16sp" />

                            <RatingBar
                                android:id="@id/grade_rating_bar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:max="5"
                                android:numStars="5"
                                android:stepSize="1" />
                        </LinearLayout>

                        <TextView
                            android:id="@id/review"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark"
                            android:textSize="16sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </TableRow>

        <TableRow>

            <Button
                android:id="@id/add_review_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_weight="1"
                android:text="@string/add_review"
                android:visibility="gone" />

            <LinearLayout
                android:id="@id/rootLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3" >

                <com.quickride.customer.trans.view.UnsubscribeButton
                    android:id="@id/unsubscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/unsubscribe" />

                <Button
                    android:id="@id/pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/pay"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>