<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/searchbg" >

        <TableLayout
            android:layout_width="250.0dip"
            android:layout_height="43.0dip"
            android:shrinkColumns="*" >

            <TableRow>

                <ImageButton
                    android:id="@id/voice_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dip"
                    android:layout_marginTop="1dip"
                    android:background="@color/white"
                    android:src="@drawable/ic_btn_speak_now" />

                <AutoCompleteTextView
                    android:id="@id/searchbar"
                    style="?android:attr/textViewStyle"
                    android:layout_width="193.0dip"
                    android:layout_height="43.0dip"
                    android:layout_marginLeft="6dip"
                    android:background="@null"
                    android:completionThreshold="1"
                    android:hint="@string/input_search_address"
                    android:singleLine="true"
                    android:textColor="@color/dark" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@id/clear_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="22dip"
            android:layout_marginTop="12dip"
            android:layout_toLeftOf="@id/search_button"
            android:background="@drawable/clear_content" />

        <ImageButton
            android:id="@id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="3.0dip"
            android:layout_marginTop="4dip"
            android:background="@drawable/home_search_selector" />
    </RelativeLayout>

    <TabHost
        android:id="@id/address_tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:stretchColumns="*" >

            <TableRow android:layout_weight="1" >

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <LinearLayout
                        android:id="@id/common_address"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dip"
                            android:layout_marginLeft="10dip"
                            android:text="@string/common_address"
                            android:textColor="@color/dark"
                            android:textSize="16sp" />

                        <ac.mm.android.view.ScrollPagingListView
                            android:id="@id/common_address_list"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="#00000000"
                            android:divider="@android:color/transparent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@id/history_address"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dip"
                            android:layout_marginLeft="10dip"
                            android:text="@string/history_address"
                            android:textColor="@color/dark"
                            android:textSize="16sp" />

                        <ac.mm.android.view.ScrollPagingListView
                            android:id="@id/history_address_list"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="#00000000"
                            android:divider="@android:color/transparent" />
                    </LinearLayout>
                </FrameLayout>
            </TableRow>

            <TableRow
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="3dip" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >
                </TabWidget>
            </TableRow>
        </TableLayout>
    </TabHost>

</LinearLayout>