<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ui.Main" >
    <RelativeLayout
        android:id="@+id/main_header_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/main_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/main_home" />

        <TextView
            android:id="@+id/main_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/main_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/main_next" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_footer_layout"
        android:layout_below="@+id/main_header_layout"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true" >

        <ViewFlipper
            android:id="@+id/main_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <include layout="@layout/main_airplane_layout" />

            <include layout="@layout/main_car_layout" />

            <include layout="@layout/main_coupon_layout" />

            <include layout="@layout/main_more_layout" />
        </ViewFlipper>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_footer_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <RadioButton
                android:id="@+id/main_airplane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_airplane" />

            <RadioButton
                android:id="@+id/main_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_car" />

            <RadioButton
                android:id="@+id/main_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_coupon" />

            <RadioButton
                android:id="@+id/main_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_more" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>