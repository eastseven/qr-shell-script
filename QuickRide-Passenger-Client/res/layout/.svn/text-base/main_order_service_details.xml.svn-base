<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/main_header_layout_widget" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_header_layout_widget" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingTop="24dp" >

            <EditText
                android:id="@+id/main_sd_product_name"
                style="@style/form" />

            <EditText
                android:id="@+id/main_sd_car_grade"
                style="@style/form" />

            <EditText
                android:id="@+id/main_sd_price"
                style="@style/form" />

            <EditText
                android:id="@+id/main_sd_pickup_time"
                style="@style/form" />

            <EditText
                android:id="@+id/main_sd_pickup_address"
                style="@style/form"
                android:hint="@string/main_sd_pickup_address" />

            <EditText
                android:id="@+id/main_sd_discharge_address"
                style="@style/form"
                android:hint="@string/main_sd_discharge_address" />

            <EditText
                android:id="@+id/main_sd_flight_number"
                style="@style/form"
                android:hint="@string/main_sd_flight_number" />

            <Button
                android:id="@+id/main_next"
                style="@style/form_button_check"
                android:layout_width="match_parent"
                android:text="@string/main_next" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>