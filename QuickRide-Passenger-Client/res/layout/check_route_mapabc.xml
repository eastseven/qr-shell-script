<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/rootLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/rent_main_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dip"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@id/call_service"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/call_contact"
            android:text="@string/customer_service" />

        <ImageButton
            android:id="@id/car_location"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/car" />

        <Button
            android:id="@id/call_driver"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/call_contact"
            android:text="@string/driver" />
    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:stretchColumns="*" >

        <TableRow android:layout_weight="1.0" >

            <com.mapabc.mapapi.map.MapView
                android:id="@id/map"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:apiKey="@string/mapabc_key"
                android:clickable="true" />
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@id/arrive_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@id/address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:ellipsize="marquee"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:orientation="horizontal" >

                    <com.quickride.customer.trans.view.MenuButton
                        android:id="@id/menu"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />

                    <com.quickride.customer.trans.view.UnsubscribeButton
                        android:id="@id/unsubscribe"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="@string/unsubscribe"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@id/my_location"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:src="@drawable/ic_pickup_marker" />

                    <ImageButton
                        android:id="@id/get_off_car_location"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:paddingBottom="0dip"
                        android:paddingTop="0dip"
                        android:src="@drawable/end_point"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>