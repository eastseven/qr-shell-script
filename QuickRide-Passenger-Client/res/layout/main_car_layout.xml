<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/main_content_car_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/main_content_car_start_address"
        style="@style/form"
        android:inputType="textAutoComplete"
        android:hint="@string/main_start_address" >
    </EditText>

    <EditText
        android:id="@+id/main_content_car_end_address"
        style="@style/form"
        android:hint="@string/main_end_address" >
    </EditText>

    <EditText
        android:id="@+id/main_content_car_pickup_time"
        style="@style/form"
        android:hint="@string/main_pickup_time" >
    </EditText>

    <EditText
        android:id="@+id/main_content_car_code"
        style="@style/form"
        android:hint="@string/main_code" >
    </EditText>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center" >

        <Button
            android:id="@+id/main_content_car_check"
            style="@style/form_button_check"
            android:text="@string/main_check" />

        <Button
            android:id="@+id/main_content_car_reset"
            style="@style/form_button_reset"
            android:text="@string/main_reset" />
    </LinearLayout>

</LinearLayout>